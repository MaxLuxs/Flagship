# Flagship Server Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to git!

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/flagship
DATABASE_USER=flagship
DATABASE_PASSWORD=your-secure-database-password-here

# JWT Authentication
# IMPORTANT: Use a strong, random secret key in production!
# Generate one with: openssl rand -base64 32
JWT_SECRET=change-me-in-production-use-strong-secret-key-min-32-chars

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Optional: Admin Configuration
# ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD=secure-admin-password

# Optional: CORS Configuration (comma-separated origins)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Optional: Logging Level
# LOG_LEVEL=INFO
