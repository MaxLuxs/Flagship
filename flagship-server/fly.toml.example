# Fly.io конфигурация для Flagship Server
# Скопируйте этот файл в fly.toml и настройте под ваше приложение

app = "flagship-server"
primary_region = "iad"  # Измените на ваш регион (iad, ord, dfw, etc.)

[build]
  dockerfile = "flagship-server/Dockerfile"
  docker_buildkit = true

[env]
  SERVER_PORT = "8080"
  SERVER_HOST = "0.0.0.0"
  LOG_LEVEL = "INFO"

# HTTP сервис
[[services]]
  internal_port = 8080
  protocol = "tcp"
  processes = ["app"]

  [[services.ports]]
    handlers = ["http"]
    port = 80
    force_https = true

  [[services.ports]]
    handlers = ["tls", "http"]
    port = 443

  [services.concurrency]
    type = "connections"
    hard_limit = 1000
    soft_limit = 500

  # Health check
  [[services.http_checks]]
    interval = "10s"
    timeout = "2s"
    grace_period = "5s"
    method = "GET"
    path = "/health"
    protocol = "http"
    tls_skip_verify = false

  # Metrics endpoint (опционально)
  [[services.http_checks]]
    interval = "30s"
    timeout = "2s"
    grace_period = "5s"
    method = "GET"
    path = "/metrics"
    protocol = "http"
    tls_skip_verify = false

